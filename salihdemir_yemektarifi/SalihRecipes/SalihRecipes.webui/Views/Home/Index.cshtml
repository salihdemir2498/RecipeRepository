@model FoodListViewModel

<div class="row">
    <div class="col-md-10 m-auto">
        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">


                    @if (Model.Foods.Count < 10)
                    {

                    
                            @for (int i = 0; i < Model.Foods.Count; i++)
                            {
                                if (i == 0)
                                {
                                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@i" class="active" aria-current="true" aria-label="Slide @(i+1)"></button>
                                }
                                else
                                {
                                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@i" aria-label="Slide @(i + 1)"></button>

                                }
                            }
                        
                    }
                
            </div>
            <div class="carousel-inner mb-5">

                @if (Model.Foods.Count != 0)
                {
                    int b = 0;
                    @foreach (var a in Model.Foods)
                    {

                        @for (int i = 0; i < Model.Foods.Count; i++)
                        {
                            if (b == 1)
                            {
                                i = 1;
                            }
                            if (b == 2)
                            {
                                i = 2;
                            }
                            if (b == 3)
                            {
                                i = 3;
                            }
                            if (b == 4)
                            {
                                i = 4;
                            }

                            if (i == 0)
                            {
                                <div class="carousel-item active">
                                    <a href="#"><img style="max-height:600px;" src="~/images/@a.FoodImage" class="d-block w-100"></a>
                                    

                                    <div class="carousel-caption d-none d-md-block">
                                        <p style="font-size: 50px; color: rgb(254, 242, 0); font-family: 'Akshar', sans-serif; "><strong>@a.FoodDescription</strong></p>
                                    </div>
                                </div>
                                break;
                            }

                            else if (i == 1)
                            {
                                <div class="carousel-item">
                                    <a href="#"><img style="max-height:600px;" src="~/images/@a.FoodImage" class="d-block w-100"></a>
                                    

                                    <div class="carousel-caption d-none d-md-block">
                                        <p style="font-size: 50px; color: rgb(254, 242, 0); font-family: 'Akshar', sans-serif; "><strong>@a.FoodDescription</strong></p>
                                    </div>
                                </div>
                                break;
                            }
                            else if (i == 2)
                            {
                                <div class="carousel-item">
                                    <a href="#"><img style="max-height:600px;" src="~/images/@a.FoodImage" class="d-block w-100"></a>
                                    

                                    <div class="carousel-caption d-none d-md-block">
                                        <p style="font-size: 50px; color: rgb(254, 242, 0); font-family: 'Akshar', sans-serif; "><strong>@a.FoodDescription</strong></p>
                                    </div>
                                </div>
                                break;
                            }
                            else if (i == 3)
                            {
                                <div class="carousel-item">
                                    <a href="#"><img style="max-height:600px;" src="~/images/@a.FoodImage" class="d-block w-100"></a>
                                    

                                    <div class="carousel-caption d-none d-md-block">
                                        <p style="font-size: 50px; color: rgb(254, 242, 0); font-family: 'Akshar', sans-serif; "><strong>@a.FoodDescription</strong></p>
                                    </div>
                                </div>
                                break;
                            }
                            else if (i == 4)
                            {
                                <div class="carousel-item">
                                    <a href="#"><img style="max-height:600px;" src="~/images/@a.FoodImage" class="d-block w-100"></a>
                                    

                                    <div class="carousel-caption d-none d-md-block">
                                        <p style="font-size: 50px; color: rgb(254, 242, 0); font-family: 'Akshar', sans-serif; "><strong>@a.FoodDescription</strong></p>
                                    </div>
                                </div>
                                break;
                            }

                        }
                        b++;


                    }
                }


            </div>
                    

          

            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>

        </div>
    </div>
</div>



