@model CategoryModel



<h1 class="h3">Create Category</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="CategoryCreate" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3 row mt-5">
                <label asp-for="CategoryName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="CategoryName">
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Url" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Url">
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-md-2">
                    <label asp-for="CategoryImage" class="form-label"></label>
                </div>
                <div class="col-md-4">
                    <input type="hidden" asp-for="CategoryImage">
                    <input type="file" name="file" />
                </div>

            </div>
            <div class="mb-5 row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Save Category</button>
                </div>
            </div>
        </form>
    </div>
</div>