@model FoodListViewModel

<div class="row">
    <div class="col-md-12">
        <h1 class="h3">Admin Foods</h1>
        <hr />
        <a class="btn btn-primary btn-sm" href="/admin/foods/create">Add Foods</a>
        <table class="table table-sm table-bordered mt-3">
            <thead>
                <tr>
                    <td width="30">Id</td>
                    <td width="100">Image</td>
                    <td>Name</td>
                    <td width="20">Price</td>
                    <td width="20">Anasayfa</td>
                    <td width="20">Onaylı</td>
                    <td width="20">Slider</td>
                    <td width="150">Actions</td>
                </tr>
            </thead>
            <tbody>

                @if (Model.Foods.Count() > 0)
                {
                    @foreach (var item in Model.Foods)
                    {
                <tr>
                    <td>@item.FoodId</td>
                    <td><img src="~/images/@item.FoodImage" width="80" height="80" /></td>
                    <td>@item.FoodName</td>
                    <td>@item.FoodPrice</td>
                    <td>
                        @if (item.IsHome)
                        {
                            <i class="fa-solid fa-circle-check text-success"></i>
                        }
                        else
                        {
                            <i class="fa-solid fa-circle-xmark text-danger"></i>
                        }
                    </td>
                    <td>
                        @if (item.IsApproved)
                        {
                            <i class="fa-solid fa-circle-check text-success"></i>
                        }
                        else
                        {
                            <i class="fa-solid fa-circle-xmark text-danger"></i>
                        }
                    </td>
                    <td>
                        @if (item.IsSlider)
                        {
                            <i class="fa-solid fa-circle-check text-success"></i>
                        }
                        else
                        {
                            <i class="fa-solid fa-circle-xmark text-danger"></i>
                        }
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm me-2" href="/admin/foods/@item.FoodId">Edit</a>

                        <form action="/admin/deletefood" method="post" class="d-inline">
                            <input type="hidden" name="foodId" value="@item.FoodId" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>No Foods</h3>
                    </div>
                }


            </tbody>
        </table>
    </div>
</div>