@model UserDetailsModel

<h5 class="display-4">Edit User</h5>
<hr />
<form class="row g-3" asp-controller="Admin" asp-action="UserEdit" method="post" enctype="multipart/form-data">

    <div class="row">
        <div class="col-md-8">

            <div class="col-md-8 mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input class="form-control" asp-for="FirstName">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input class="form-control" asp-for="LastName">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input class="form-control" asp-for="UserName">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input class="form-control" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-12 mb-3">
                <input type="hidden" name="UserId" value="@Model.UserId" />
                <button type="submit" class="btn btn-success">Save Changes</button>
            </div>
        </div>
        <div class="col-md-4">

            @foreach (var rolename in ViewBag.Roles)
            {
                <div class="form-check">
                    <input class="form-check-input"
                           type="checkbox"
                           name="SelectedRoles"
                           value="@rolename"
                           id="@rolename"
                           @if (Model.SelectedRoles != null) { @(Model.SelectedRoles.Any(i => i == rolename) ? "checked" : "") } />
                    <label class="form-check-label" for="@rolename">
                        @rolename
                    </label>
                </div>
            }
            <hr />

            <div class="custom-control custom-checkbox">
                <input type="checkbox" asp-for="EmailConfirmed" class="custom-control-input" />
                <label asp-for="EmailConfirmed" class="custom-control-label"></label>
            </div>

        </div>
    </div>

</form>