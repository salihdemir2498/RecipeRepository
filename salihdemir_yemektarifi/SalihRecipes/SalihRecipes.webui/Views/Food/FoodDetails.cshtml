        </div>
        <div class="col-md-8">

            <h5 class="mb-3">@Model.Food.FoodName</h5> <hr />
            <div class="d-flex flex-column align-items-lg-start">
                @foreach (var item in Model.Categories)
                {
                    if (Model.Categories.Count == 1)
                {
                     <a asp-controller="Food" asp-action="FoodList" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3"><span class="text-dark">Category Name: </span>@item.CategoryName</a>
                }
                    else
                {
                    <a asp-controller="Food" asp-action="FoodList" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3"><span class="text-dark">Category Name: </span>
                    
                        @for (int i = 0; i < Model.Categories.Count-1; i++)
                    {
                            @item.CategoryName
                            break;

                    }
                      </a>
                         
                
                }
                   

                }
              
            <a @*asp-controller="Author" asp-action="AuthorList" asp-route-id="@Model.Author.AuthorId"*@ class="btn btn-link p-0 mb-3"><span class="text-dark"><img src="~/images/author-icon-21.jpg" width="30" height="35" alt="Alternate Text" /></span>@Model.UserName</a>

                
            </div>
            


